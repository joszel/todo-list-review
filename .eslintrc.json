{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "import/extensions": [ 1, {
        "js": "always", "json": "always"
      }],
        "no-nested-ternary": "off",
        "no-unused-expressions": "off",
        "no-sequences": "off",
        "no-func-assign": "off",
        "no-class-assign": "off",
        "import/no-mutable-exports": "off",
        "no-unused-vars" : "off"
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }